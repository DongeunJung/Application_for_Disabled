<h1>Bookmarks#index</h1>

<div class="container-fluid">
	<%= link_to '전체보기', bookmarks_path %>
	<%= link_to '식당만보기', bookmarks_show_restrs_path %>
	<%= link_to '숙박만보기', bookmarks_show_accoms_path %>

	<hr>

	<% @bookmarks.each do |b| %>
		<% restr = Restr.find_by(seq:b.seq) %>
		<% accom = Accom.find_by(seq:b.seq) %>
		
		<% if !restr.nil? %>
			<%= link_to '삭제', bookmark_path(b.id, :type=>"restr"), method:"delete" %>
			<%= b.seq %>
			<%= restr.name %>
			<%= restr.gu %>
			<%= link_to '자세히보기', restaurant_path(restr.id) %>
		<% end %>
		
		<% if !accom.nil? %>
			<%= link_to '삭제', bookmark_path(b.id, :type=>"accom") %>
			<%= b.seq %>
			<%= accom.name %>
			<%= accom.gu %>
			<%= link_to '자세히보기', accomodation_path(accom.id) %>
		<% end %>
		
		<hr>
		
	<% end %>
</div>