<div class="container">
	<table class="table table-striped">
		<thead>
			<tr>
				<th></th>
				<th>Name</th>
				<th>Address</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @accoms.each_with_index do |a,index| %>
				<tr>
					<td><%=index+1%></td>
					<!--<td><%=a.seq%></td>--!>
					<td><%=a.name%></td>
					<td><%=a.gu%></td>
					<td><%=link_to '상세보기', accomodation_path(a.id), class:"btn btn-light" %>
						<% if !session[:user_id].nil? %>
							<%=link_to '즐겨찾기', 
								member_bookmarks_path(:member_id=>session[:user_id], :id=>a.id, :type=>"accom"), 
								:data => {:confirm => 'Are you sure?'},
								method:"post", class:"btn btn-light", style:"background-color:#FFFF59" %>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	
	<ul class="pagination justify-content-center">
		<%= will_paginate @accoms %>
	</ul>
</div>